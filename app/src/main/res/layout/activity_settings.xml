                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="Notifications"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/title"
                    android:fontFamily="@font/baloo"
                    android:text="from Calls"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="In Car"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="Battray"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="Signal"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/incar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/name"
                    android:foregroundGravity="center"
                    android:gravity="center" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/battrey_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incar_btn"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/name2"
                    android:foregroundGravity="center"
                    android:gravity="center" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/signal_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/battrey_btn"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/name2"
                    android:foregroundGravity="center"
                    android:gravity="center" />

