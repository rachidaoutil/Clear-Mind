                <!--            android:layout_marginTop="10dp"-->
                <!--            android:layout_toRightOf="@+id/avrg_data"-->
                <!--            android:scaleType="fitXY"-->
                <!--            android:src="@drawable/ic_privacy" />-->


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
