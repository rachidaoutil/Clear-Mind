            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:layout_alignParentTop="false"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/slide"
                    android:fontFamily="@font/baloo"
                    android:text="Hours"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/recommended_settings_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/title3"
                    android:gravity="end"
                    android:minHeight="48dp" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="Limits"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/title2"
                    android:fontFamily="@font/baloo"
                    android:text="Recommended"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title2"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/slide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo"
                    android:padding="3dp"
                    android:text="Usage Time"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/settin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/slide"
                    android:layout_below="@id/line2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="name"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/slide2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slide"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo"
                    android:padding="3dp"
                    android:text="Call lenght  "
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/slide3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slide2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo"
                    android:padding="3dp"
                    android:text="Frequency"
                    android:textColor="@color/white"
                    android:textSize="16dp" />


                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/usage_time_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/slide"
                    android:padding="3dp"
                    app:bsb_bubble_color="@color/grey"
                    app:bsb_bubble_text_color="@color/colorPrimaryDark"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="@color/grey"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_step_section="true"
                    app:bsb_show_progress_in_float="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"

                    app:bsb_track_color="@color/white" />


                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/call_lenght_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usage_time_seekbar"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/slide2"
                    android:padding="3dp"
                    app:bsb_bubble_color="@color/grey"
                    app:bsb_bubble_text_color="@color/colorPrimaryDark"
                    app:bsb_max="60"
                    app:bsb_min="0"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="@color/grey"
                    app:bsb_section_count="6"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_step_section="true"
                    app:bsb_show_progress_in_float="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"

                    app:bsb_track_color="@color/white" />


                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/notif_freq_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slide2"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/slide2"
                    android:padding="3dp"
                    app:bsb_bubble_color="@color/grey"
                    app:bsb_bubble_text_color="@color/colorPrimaryDark"
                    app:bsb_max="10"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="@color/grey"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_step_section="true"
                    app:bsb_show_progress_in_float="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"

                    app:bsb_track_color="@color/white" />




            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="15dp">

                <TextView
